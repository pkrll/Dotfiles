#compdef hazel

typeset -A opt_args
local context state line

_arguments -C   "--version[Print version information and exit]" \
                "--help[Print help message and exit]" \
                "--no-config[Do not generate .editorconfig]" \
                "--no-makefile[Do not generate Makefile]" \
                "--type[Choose language for project: c|c++|swift|java|erlang]:info code:(c c++ swift java erlang)" \
                && return 0
