# Common aliases
alias pi='ssh gitpi'
alias cl='clear'
alias bcd='cd $OLDPWD'
alias ls='ls -o'
alias lsa='ls -Ao'
alias l='ls -log'
alias la='ls -Alog'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias update='git up'
alias cdgit="cd ~/Public/Git"
alias g='git'
alias gco='git checkout'
alias gci='git commit'
alias gps='git push'
alias gpl='git pull'
alias ga='git add'
alias gitclean='git branch --merged | egrep -v "(^\*|master|main|dev)" | xargs git branch -d'
alias fstln="bundle exec fastlane"
# For non-macos and terminals support --color arg
if [ -x /usr/bin/dircolors ]; then
  test -r ~/.dotfiles/.dircolors && eval "$(dircolors -b ~/.dotfiles/.dircolors)" || eval "$(dircolors -b)"
  alias ls='ls -o --color=auto'
fi

if [ -x /usr/local/bin/gpg2 ]; then
  function gpg {
    gpg2
  }
fi
